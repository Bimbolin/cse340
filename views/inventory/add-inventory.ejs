<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Add Inventory</title>
    <script>
        function validateForm() {
            // Perform client-side validation if needed
            return true;
        }
    </script>
</head>
<body>
    <div class="form-container">
        <h1>Add New Inventory Item</h1>
        <% if (messages && messages.error) { %>
            <div class="flash-message"><%= messages.error %></div>
        <% } %>
        <% if (messages && messages.success) { %>
            <div class="flash-message"><%= messages.success %></div>
        <% } %>
        <% if (errors && errors.array) { %>
            <ul class="notice">
                <% errors.array().forEach(error => { %>
                    <li><%= error.msg %></li>
                <% }) %>
            </ul>
        <% } %>
        <form action="/inventory/add-inventory" method="POST" onsubmit="return validateForm()">
            <label for="classification_id">Classification:</label>
            <%= classificationList %>
    
            <label for="inv_make">Make:</label>
            <input type="text" id="inv_make" name="inv_make" required value="<%= typeof inv_make !== 'undefined' ? inv_make : '' %>">
    
            <label for="inv_model">Model:</label>
            <input type="text" id="inv_model" name="inv_model" required value="<%= typeof inv_model !== 'undefined' ? inv_model : '' %>">
    
            <label for="inv_description">Description:</label>
            <textarea id="inv_description" name="inv_description" required><%= typeof inv_description !== 'undefined' ? inv_description : '' %></textarea>
    
            <label for="inv_price">Price:</label>
            <input type="text" id="inv_price" name="inv_price" required value="<%= typeof inv_price !== 'undefined' ? inv_price : '' %>">
    
            <label for="inv_image">Image Path:</label>
            <input type="text" id="inv_image" name="inv_image" required value="<%= typeof inv_image !== 'undefined' ? inv_image : '' %>">
    
            <label for="inv_thumbnail">Thumbnail Path:</label>
            <input type="text" id="inv_thumbnail" name="inv_thumbnail" required value="<%= typeof inv_thumbnail !== 'undefined' ? inv_thumbnail : '' %>">
    
            <label for="inv_miles">Miles:</label>
            <input type="text" id="inv_miles" name="inv_miles" required value="<%= typeof inv_miles !== 'undefined' ? inv_miles : '' %>">
    
            <label for="inv_color">Color:</label>
            <input type="text" id="inv_color" name="inv_color" required value="<%= typeof inv_color !== 'undefined' ? inv_color : '' %>">
    
            <button type="submit">Add Inventory</button>
        </form>
    </div>
</body>
</html>
