<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>User Activity Log</title>
</head>
<body>
  <h1>User Activity Log</h1>

  <% if (messages && messages.success) { %>
    <div class="flash-message"><%= messages.success %></div>
  <% } %>
  <% if (messages && messages.error) { %>
    <div class="flash-message"><%= messages.error %></div>
  <% } %>
  <% if (errors) { %>
    <ul class="notice">
      <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <table>
    <thead>
      <tr>
        <th>Activity Type</th>
        <th>Timestamp</th>
      </tr>
    </thead>
    <tbody>
      <% activityLog.forEach(activity => { %>
        <tr>
          <td><%= activity.activity_type %></td>
          <td><%= activity.activity_timestamp %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
