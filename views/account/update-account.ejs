<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Update Account Information</title>
</head>
<body>
  <h1>Update Account Information</h1>

  <% if (messages && messages.success) { %>
    <div class="flash-message"><%= messages.success %></div>
  <% } %>
  <% if (messages && messages.error) { %>
    <div class="flash-message"><%= messages.error %></div>
  <% } %>
  <% if (errors) { %>
    <ul class="notice">
      <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>


<!-- Account Update Form -->
<form action="/account/update" method="post">
  <input type="hidden" name="account_id" value="<%= user.account_id %>">

  <label for="account_firstname">First Name:</label>
  <input type="text" id="account_firstname" name="account_firstname" required value="<%= user.account_firstname %>"><br><br>

  <label for="account_lastname">Last Name:</label>
  <input type="text" id="account_lastname" name="account_lastname" required value="<%= user.account_lastname %>"><br><br>

  <label for="account_email">Email:</label>
  <input type="email" id="account_email" name="account_email" required value="<%= user.account_email %>"><br><br>

  <button type="submit">Update Account</button>
</form>

<!-- Change Password Form -->
<form action="/account/change-password" method="post">
  <input type="hidden" name="account_id" value="<%= user.account_id %>">

  <label for="new_password">New Password:</label>
  <input type="password" id="new_password" name="new_password" required><br><br>

  <p>Password must be at least 8 characters long and contain a mix of letters and numbers.</p>

  <button type="submit">Change Password</button>
</form>
</body>
</html>
