<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Account Management</title>
</head>
<body>
    <h1>Account Management</h1>
    <% if (messages && messages.success) { %>
        <div class="flash-message"><%= messages.success %></div>
    <% } %>
    <% if (messages && messages.error) { %>
        <div class="flash-message"><%= messages.error %></div>
    <% } %>
    <% if (errors) { %>
        <ul class="notice">
            <% errors.forEach(error => { %>
                <li><%= error.msg %></li>
            <% }) %>
        </ul>
    <% } %>
    
    <% if (user.account_type === "Client") { %>
        <h2>Welcome <%= user.account_firstname %></h2>
      <% } else if (user.account_type === "Employee" || user.account_type === "Admin") { %>
        <h2>Welcome <%= user.account_firstname %></h2>
        <h3>Inventory Management</h3>
        <p><a href="/inventory/management">Access Inventory Management</a></p>
      <% } %>
    
      <!-- Update Account Information Link -->
      <p><a href="/account/update/<%= user.account_id %>">Update Account Information</a></p>
</body>
</html>
